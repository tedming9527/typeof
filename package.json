{
  "version": "0.0.8",
  "type": "module",
  "scripts": {
    "commit": "cz",
    "prepare": "husky",
    "add-husky-pre-commit": "echo \"npx lint-staged\" > .husky/pre-commit",
    "add-husky-commit-msg": "echo npx --no -- commitlint --edit \"$1\" > .husky/commit-msg",
    "add-husky-prepare-commit-msg": "echo \"exec < /dev/tty && npx cz --hook || true\" > .husky/prepare-commit-msg",
    "remove-husky-pre-commit": "rm .husky/pre-commit",
    "remove-husky-commit-msg": "rm .husky/commit-msg",
    "remove-husky-prepare-commit-msg": "rm .husky/prepare-commit-msg",
    "release": "HUSKY=0 standard-version",
    "build": "rollup -c",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts, js}": "eslint --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.24.6",
    "@babel/plugin-transform-runtime": "^7.24.6",
    "@babel/preset-env": "^7.24.6",
    "@babel/preset-typescript": "^7.24.6",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "5",
    "@typescript-eslint/parser": "5",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.5",
    "prettier": "^3.2.5",
    "rollup": "^4.18.0",
    "standard-version": "^9.5.0",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5"
  }
}
